apiVersion: v1
kind: Pod
metadata:
    name: trident-launcher
spec:
    serviceAccount: trident-launcher
    containers:
    - name: launcher
      image: __LAUNCHER_TAG__
      command:
      - /usr/local/bin/launcher
      args:
      - "-volume_size"
      - "2"
      #- "-volume_name"
      #- "trident"
      #- "-pvc_name
      #- "trident"
      #- "-pv_name"
      #- "trident"
      #- "-apiserver"
      #- "__KUBERNETES_SERVER__:__KUBERNETES_PORT__"
      #- "-trident_timeout"
      #- "10"
      #- "-k8s_timeout"
      #- "60"	  
      #- "-debug"
      volumeMounts:
      - name: config-volume
        mountPath: /etc/config
    volumes:
    - name: config-volume
      configMap:
            name: trident-launcher-config
    restartPolicy: Never
